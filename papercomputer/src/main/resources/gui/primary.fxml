<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.PrimaryController"
            prefWidth="600" prefHeight="400">

    <top>
        <Label text="Label"
               style="-fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 10;"/>
    </top>

    <!-- Mittlerer Bereich (Zwei TextAreas) -->
    <center>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <TextArea fx:id="textarea" prefWidth="250" prefHeight="200" />
            <TextArea fx:id="textRegister" prefWidth="250" prefHeight="200" />
        </HBox>
    </center>

    <!-- Unterer Bereich (Button) -->
    <bottom>
        <Button text="Button"
                onAction="#switchToExecuteView"
                style="-fx-font-size: 14; -fx-padding: 10;"
                prefWidth="600" alignment="CENTER"/>
    </bottom>
</BorderPane>